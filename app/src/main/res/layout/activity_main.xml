<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"

    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sophia Light"
        android:layout_marginVertical="10dp"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="218dp"
        android:layout_height="111dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/lampoff" />

    <TextView
        android:id="@+id/lampstatus"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Desligada"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:layout_width="118dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Configurações"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/configButton"
            android:layout_width="95dp"
            android:layout_height="63dp"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginVertical="15dp"
        android:text="Ajuste de Brilho [%]" />

    <SeekBar
        android:id="@+id/brightnessseekbar"
        android:layout_width="match_parent"
        android:layout_height="43dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Cor Branca [%]" />

    <SeekBar
        android:id="@+id/whitenessseekbar"
        android:layout_width="match_parent"

        android:layout_height="43dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Cores Pré Definidas" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttoncor1"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:text="cor" />

        <Button
            android:id="@+id/buttoncor2"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#00FF00"
            android:text="cor" />

        <Button
            android:id="@+id/buttoncor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#0000FF"
            android:text="cor" />

        <Button
            android:id="@+id/buttoncor4"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFF00"
            android:text="cor" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttoncor5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FF00FF"
            android:text="cor" />

        <Button
            android:id="@+id/buttoncor6"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFF"
            android:text="cor" />

        <Button
            android:id="@+id/buttoncor7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFA500"
            android:text="cor"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/buttoncor8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FC215E"
            android:text="cor"
            android:textColor="@color/black" />


    </LinearLayout>

    <Button
        android:id="@+id/startbutton"
        android:layout_width="130dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:text="Ligar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkboxsono"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modo Sono" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkboxnoite"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modo Noite" />
    </LinearLayout>


</LinearLayout>
